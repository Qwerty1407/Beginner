#include<stdio.h>
#include<cs50.h>
#include <unistd.h>

int main(void)
{
    //when s = 100 change m++
    //when m = 60 change hr++
    //when s = 60 set s to 000
    //when m = 60 set m to 00
    //when s = 100  do s - s
    int sec = 0;
    int min = 0;
    int hr = 0;
    int q = 50;
    int w = 50;


    while(true)
    {
        sec++;
        printf("%i.%i.%i\n", hr, min, sec);
        fflush(stdout);
        sleep(1);
        if(sec == 60)
        {
            sec = q - w;
            min++;
            
            if(min == 60)
            {
                min = q - w;
                hr++;
            }
        }
    }
}
